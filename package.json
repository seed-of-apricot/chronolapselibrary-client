{
  "name": "chronolapselibrary-client",
  "version": "0.1.0",
  "description": "client",
  "author": "seed.of.apricot",
  "license": "MIT",
  "target": "esnext",
  "private": true,
  "main": "src/main.js",
  "dependencies": {
    "@material-ui/core": "^4.3.2",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.3.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.8.5",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "electron": "^6.0.2",
    "electron-is-dev": "^1.1.0",
    "keyboardjs": "^2.5.1",
    "lottie-react-web": "^2.1.4",
    "react": "^16.9.0",
    "react-aad-msal": "^0.4.11",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.1.1",
    "react-scrollbars-custom": "^4.0.16",
    "react-use": "^10.5.0",
    "rebound": "^0.1.0",
    "socket.io-client": "^2.2.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.3",
    "react-hot-loader": "^4.12.11"
  },
  "scripts": {
    "start": "set HTTPS=true&&set BROWSER=none&&react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "no-console": "off"
    }
  },
  "bit": {
    "env": {},
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged",
        "license-checker --csv --out license/statement.csv --customPath license/statementConfig.json"
      ]
    }
  },
  "lint-staged": {
    "./**/*.{js,ts,jsx,tsx}": [
      "eslint",
      "jest --findRelatedTests"
    ],
    "./**/*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
